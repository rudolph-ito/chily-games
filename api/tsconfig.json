  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2015",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}